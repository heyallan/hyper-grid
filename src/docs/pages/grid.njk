{% extends "base.njk" %}

{% block content %}

  <div id="top" role="document">

    {% include "header.njk" %}

    <main role="main">
      <article>
        <h2>Breakpoints</h2>
        <ul>
          <li><code>{class}-xs: &lt;48em</code></li>
          <li><code>{class}-sm: &gt;48em</code></li>
          <li><code>{class}-md: &gt;64em</code></li>
          <li><code>{class}-lg: &gt;76em</code></li>
        </ul>
      </article>
      <br>
      <article>
        <h2>Containers</h2>
        <ul>
          <li><code>.container { max-width: 1200px; }</code></li>
          <li><code>.container-fluid { width: 100%; }</code></li>
        </ul>
      </article>
      <br>
      <article>
        <h2>Rows and columns</h2>
        <strong>.row</strong>
        <div class="row bg-primary padding-1">
          <div class="col-xs-12 col-md-4 border-1 bg-primary padding-1">
            <strong>.col-xs-12 .col-md-4</strong>
          </div><!-- /.col -->
          <div class="col-xs-12 col-md-4 border-1 bg-primary padding-1">
            <strong>.col-xs-12 .col-md-4</strong>
          </div><!-- /.col -->
          <div class="col-xs-12 col-md-4 border-1 bg-primary padding-1">
            <strong>.col-xs-12 .col-md-4</strong>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </article>
      <br><br>

      <article>
        <h2>Justify horizontal</h2>
        <strong>.row.justify-xs-center</strong>
        <div class="row justify-xs-center bg-primary padding-1">
          <div class="col-xs-3 border-1 bg-primary padding-1">
            <strong>.col-xs-3</strong>
          </div><!-- /.col -->
          <div class="col-xs-3 border-1 bg-primary padding-1">
            <strong>.col-xs-3</strong>
          </div><!-- /.col -->
          <div class="col-xs-3 border-1 bg-primary padding-1">
            <strong>.col-xs-3</strong>
          </div><!-- /.col -->
        </div><!-- /.row -->
        <br>
        <strong>.row.justify-xs-right</strong>
        <div class="row justify-xs-right bg-primary padding-1">
          <div class="col-xs-3 border-1 bg-primary padding-1">
            <strong>.col-xs-3</strong>
          </div><!-- /.col -->
          <div class="col-xs-3 border-1 bg-primary padding-1">
            <strong>.col-xs-3</strong>
          </div><!-- /.col -->
          <div class="col-xs-3 border-1 bg-primary padding-1">
            <strong>.col-xs-3</strong>
          </div><!-- /.col -->
        </div><!-- /.row -->
        <br>
        <strong>.row.justify-xs-around</strong>
        <div class="row justify-xs-around bg-primary padding-1">
          <div class="col-xs-3 border-1 bg-primary padding-1">
            <strong>.col-xs-3</strong>
          </div><!-- /.col -->
          <div class="col-xs-3 border-1 bg-primary padding-1">
            <strong>.col-xs-3</strong>
          </div><!-- /.col -->
          <div class="col-xs-3 border-1 bg-primary padding-1">
            <strong>.col-xs-3</strong>
          </div><!-- /.col -->
        </div><!-- /.row -->
        <br>
        <strong>.row.justify-xs-between</strong>
        <div class="row justify-xs-between bg-primary padding-1">
          <div class="col-xs-3 border-1 bg-primary padding-1">
            <strong>.col-xs-3</strong>
          </div><!-- /.col -->
          <div class="col-xs-3 border-1 bg-primary padding-1">
            <strong>.col-xs-3</strong>
          </div><!-- /.col -->
          <div class="col-xs-3 border-1 bg-primary padding-1">
            <strong>.col-xs-3</strong>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </article>
      <br><br>

      <article>
        <h2>Align vertical</h2>
        <strong>.row.align-xs-top</strong>
        <div class="row align-xs-top bg-primary padding-1" style="min-height:150px;">
          <div class="col-xs-12 border-1 bg-primary padding-1">
            <strong>.col-xs-12</strong>
          </div><!-- /.col -->
        </div><!-- /.row -->
        <br>
        <strong>.row.align-xs-center</strong>
        <div class="row align-xs-center bg-primary padding-1" style="min-height:150px;">
          <div class="col-xs-12 border-1 bg-primary padding-1">
            <strong>.col-xs-12</strong>
          </div><!-- /.col -->
        </div><!-- /.row -->
        <br>
        <strong>.row.align-xs-bottom</strong>
        <div class="row align-xs-bottom bg-primary padding-1" style="min-height:150px;">
          <div class="col-xs-12 border-1 bg-primary padding-1">
            <strong>.col-xs-12</strong>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </article>
      <br><br>

      <article>
        <h2>Order</h2>
        <strong>.row</strong>
        <div class="row bg-primary padding-1">
          <div class="col-xs-4 order-xs-last border-1 bg-primary padding-1">
            <strong>.order-xs-last 1</strong>
          </div><!-- /.col -->
          <div class="col-xs-4 border-1 bg-primary padding-1">
            <strong>2</strong>
          </div><!-- /.col -->
          <div class="col-xs-4 border-1 bg-primary padding-1">
            <strong>3</strong>
          </div><!-- /.col -->
        </div><!-- /.row -->
        <br>
        <strong>.row</strong>
        <div class="row bg-primary padding-1">
          <div class="col-xs-4 border-1 bg-primary padding-1">
            <strong>1</strong>
          </div><!-- /.col -->
          <div class="col-xs-4 border-1 bg-primary padding-1">
            <strong>2</strong>
          </div><!-- /.col -->
          <div class="col-xs-4 order-xs-first border-1 bg-primary padding-1">
            <strong>.order-xs-first 3</strong>
          </div><!-- /.col -->
        </div><!-- /.row -->
        <br>
        <strong>.row.row-reverse</strong>
        <div class="row row-reverse bg-primary padding-1">
          <div class="col-xs-4 border-1 bg-primary padding-1">
            <strong>1</strong>
          </div><!-- /.col -->
          <div class="col-xs-4 border-1 bg-primary padding-1">
            <strong>2</strong>
          </div><!-- /.col -->
          <div class="col-xs-4 border-1 bg-primary padding-1">
            <strong>3</strong>
          </div><!-- /.col -->
        </div><!-- /.row -->
        <br>
        <strong>.row.column-reverse</strong>
        <div class="row column-reverse justify-xs-center bg-primary padding-1">
          <div class="col-xs-4 border-1 bg-primary padding-1">
            <strong>1</strong>
          </div><!-- /.col -->
          <div class="col-xs-4 border-1 bg-primary padding-1">
            <strong>2</strong>
          </div><!-- /.col -->
          <div class="col-xs-4 border-1 bg-primary padding-1">
            <strong>3</strong>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </article>
      <br><br>
    </main><!-- role main -->
  </div><!-- role document -->

{% endblock %}
